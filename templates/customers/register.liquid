{% layout settings.customer_layout %}
<div class="span12"">
<div id="template">
  <div id="customer">
	  <!-- Create Customer -->
	  <div id="create-customer">
	    <div class="template_header">
	      <h2 class="title">Create Account</h2>
	    </div>

	    {% form 'create_customer' %}
	      {{ form.errors | default_errors }}

	      <div id="first_name" class="clearfix large_form">
	        <label for="first_name" class="login">First Name</label><br>
	        <input type="text" value="" name="customer[first_name]" id="first_name" class="large" size="30" />
	      </div>

	      <div id="last_name" class="clearfix large_form">
	        <label for="last_name" class="login">Last Name</label><br>
	        <input type="text" value="" name="customer[last_name]" id="last_name" class="large" size="30" />
	      </div>

	      <div id="email" class="clearfix large_form">
	        <label for="email" class="login">Email Address</label><br>
	        <input type="email" value="" name="customer[email]" id="email" class="large" size="30" />
	      </div>

		<div id="accepts_marketing" class="clearfix large_form" style="padding-top:10px; padding-bottom:10px"> 
			<label for="marketing" style="font-weight:normal">I want to receive the newsletter.</label> 
			<input type="checkbox" name="customer[accepts_marketing]" checked="checked" value="true" id="marketing" />
		  </div> 

	      <div id="password" class="clearfix large_form">
	        <label for="password" class="login">Password</label><br>
	        <input type="password" value="" name="customer[password]" id="password" class="large password" size="30" />
	      </div>
<br>
	      <div class="action_bottom">
	        <input class="btn" type="submit" value="Create" />
	        <span class="note">or <a href="{{ shop.url }}">Return to Store</a></span>
	      </div>
	    {% endform %}
	  </div><!-- /#create-customer -->
  </div>
</div>
</div>